@model KuaforDbSistemi.Models.Randevu

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Randevuyu Düzenle</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="MusteriAd"></label>
            <input type="text" class="form-control" asp-for="MusteriAd" />
            <span asp-validation-for="MusteriAd" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="MusteriSoyad"></label>
            <input type="text" class="form-control" asp-for="MusteriSoyad" />
            <span asp-validation-for="MusteriSoyad" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Tarih"></label>
            <input type="datetime-local" class="form-control" asp-for="Tarih" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="SalonId"></label>
            <select class="form-control" asp-for="SalonId" asp-items="ViewBag.SalonId"></select>
            <span asp-validation-for="SalonId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="CalisanId"></label>
            <select class="form-control" asp-for="CalisanId" asp-items="ViewBag.CalisanId"></select>
            <span asp-validation-for="CalisanId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="IslemId"></label>
            <select class="form-control" asp-for="IslemId" asp-items="ViewBag.IslemId"></select>
            <span asp-validation-for="IslemId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Durum"></label>
            <select class="form-control" asp-for="Durum" asp-items="ViewBag.Durum"></select>
            <span asp-validation-for="Durum" class="text-danger"></span>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Geri Dön</a>
        </div>
    </form>
</div>
