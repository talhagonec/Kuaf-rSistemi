@model KuaforDbSistemi.Models.Randevu

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Yeni Randevu Oluþtur</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="MusteriAd">Müþteri Adý</label>
            <input asp-for="MusteriAd" class="form-control" id="MusteriAd" />
            <span asp-validation-for="MusteriAd" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="MusteriSoyad">Müþteri Soyadý</label>
            <input asp-for="MusteriSoyad" class="form-control" id="MusteriSoyad" />
            <span asp-validation-for="MusteriSoyad" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="Tarih">Tarih</label>
            <input asp-for="Tarih" type="datetime-local" class="form-control" id="Tarih" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="SalonId">Salon</label>
            <select asp-for="SalonId" class="form-control" id="SalonId" asp-items="ViewBag.SalonId ?? new SelectList(Enumerable.Empty<SelectListItem>())"></select>
            <span asp-validation-for="SalonId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="CalisanId">Çalýþan</label>
            <select asp-for="CalisanId" class="form-control" id="CalisanId" asp-items="ViewBag.CalisanId ?? new SelectList(Enumerable.Empty<SelectListItem>())"></select>
            <span asp-validation-for="CalisanId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="IslemId">Ýþlem</label>
            <select asp-for="IslemId" class="form-control" id="IslemId" asp-items="ViewBag.IslemId ?? new SelectList(Enumerable.Empty<SelectListItem>())"></select>
            <span asp-validation-for="IslemId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="Durum">Durum</label>
            <select asp-for="Durum" class="form-control" id="Durum" asp-items="ViewBag.Durum ?? new SelectList(Enumerable.Empty<SelectListItem>())"></select>
            <span asp-validation-for="Durum" class="text-danger"></span>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Geri</a>
        </div>
    </form>
</div>
