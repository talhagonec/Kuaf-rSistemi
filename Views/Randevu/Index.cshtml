@model IEnumerable<KuaforIsletmeYonetim.Models.Randevu>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-5">Randevu Yönetimi</h1>
        <a asp-controller="Randevu" asp-action="Yeni" class="btn btn-success btn-lg shadow">Randevu Ekle</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center mt-4" role="alert">
            Henüz eklenmiş bir randevu bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Müşteri Adı</th>
                    <th>Çalışan</th>
                    <th>Randevu Tarihi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.MusteriAdi</td>
                        <td>@randevu.Calisan?.Ad ?? "Bilinmiyor"</td>
                        <td>@randevu.BaslangicSaati.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
