@model List<KuaforDbSistemi.Models.Randevu>

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Randevular</h2>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Müþteri Adý</th>
                    <th>Soyadý</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>Çalýþan</th>
                    <th>Salon</th>
                    <th>Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MusteriAd</td>
                        <td>@item.MusteriSoyad</td>
                        <td>@item.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.Durum</td>
                        <td>@item.Calisan?.Ad ?? "Bilinmiyor"</td>
                        <td>@item.Salon?.Isim ?? "Bilinmiyor"</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Henüz herhangi bir randevu bulunmamaktadýr.
        </div>
    }

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">Yeni Randevu Oluþtur</a>
    </div>
</div>
