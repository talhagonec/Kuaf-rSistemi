@model IEnumerable<KuaforIsletmeYonetim.Models.Salon>

<div class="container mt-5">
    <div class="p-5 text-white rounded shadow" style="background: linear-gradient(to right, #ff7e5f, #feb47b);">
        <h1 class="display-4 text-center">Salon Yönetimi</h1>
        <p class="lead text-center">Kuaför işletmenizi kolayca yönetin ve düzenleyin!</p>
        <div class="text-center mt-3">
            <a href="/SalonView/Ekle" class="btn btn-success btn-lg shadow">Yeni Salon Ekle</a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center mt-4" role="alert">
            Henüz eklenmiş bir salon bulunmamaktadır. Lütfen yeni bir salon ekleyin.
        </div>
    }
    else
    {
        <div class="card mt-4 shadow">
            <div class="card-header text-white" style="background: linear-gradient(to right, #43cea2, #185a9d);">
                <h2 class="card-title mb-0">Salon Listesi</h2>
            </div>
            <div class="card-body" style="background-color: #f9f9f9;">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Ad</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var salon in Model)
                        {
                            <tr>
                                <td>@salon.Ad</td>
                                <td>@salon.Adres</td>
                                <td>@salon.Telefon</td>
                                <td>
                                    <a asp-controller="SalonView" asp-action="Detay" asp-route-id="@salon.Id" class="btn btn-primary btn-sm me-1 shadow">Detay</a>
                                    <a asp-controller="SalonView" asp-action="Duzenle" asp-route-id="@salon.Id" class="btn btn-warning btn-sm me-1 shadow">Düzenle</a>
                                    <a asp-controller="SalonView" asp-action="Sil" asp-route-id="@salon.Id" class="btn btn-danger btn-sm shadow">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
