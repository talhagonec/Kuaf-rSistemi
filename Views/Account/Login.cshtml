@model KuaforDbSistemi.ViewModels.LoginViewModel

<div class="container mt-5">
    <h2 class="text-center text-primary">Giriş Yap</h2>
    <form asp-action="Login" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="Email" class="form-label">E-posta</label>
            <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi giriniz" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Password" class="form-label">Şifre</label>
            <input asp-for="Password" class="form-control" placeholder="Şifrenizi giriniz" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-check mt-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
        </div>
        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
        </div>
    </form>
</div>
