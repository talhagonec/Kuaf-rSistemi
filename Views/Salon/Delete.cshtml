@model KuaforDbSistemi.Models.Salon

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2>Salon Sil</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Bu salonu silmek istediğinizden emin misiniz?</h4>
            <dl class="row mt-4">
                <dt class="col-sm-3">Salon İsmi:</dt>
                <dd class="col-sm-9">@Model.Isim</dd>

                <dt class="col-sm-3">Adres:</dt>
                <dd class="col-sm-9">@Model.Adres</dd>

                <dt class="col-sm-3">Çalışma Saatleri:</dt>
                <dd class="col-sm-9">@Model.CalismaSaatleri</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-danger mr-2">Sil</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
